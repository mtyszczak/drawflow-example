{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2019", "DOM"],
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "types": [
      "@types/node",
      "@nuxt/types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "./client/**/*.vue",
    "./client/**/*.ts",
    "./client/**/*.js",
    "./client/**/*.json"
  ],
  "exclude": [
    "./.nuxt",
    "./dist"
  ]
}